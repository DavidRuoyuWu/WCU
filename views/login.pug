extends layout

block content
  .container.signin-container
  .row
    .col
    .col-sm-12.col-md-8
      .card.signin-card
        .card-block#signin-img
          form#signin-form(method='post', action='/users/login')
            .form-group
              input#usernameInput.form-control(name='username' type='text' required='required' placeholder='Username')
            .form-group
              input#passwordInput.form-control(name='password' type='password' required='required' placeholder='Password')
            input.btn.btn-primary.main-btn(type='submit', name='submit', value='Log In')
            label.form-check-label
              input.form-check-input(type='checkbox')
              |  remember
              br
              a(href='/users/help')  need help?
              a(href='/users/forgot')  forget password?
      a.create-new-account(href='/users/register') new account?
    .col
