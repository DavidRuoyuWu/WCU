extends layout

block content
  .container.signin-container
  .row
    .col
    .col-sm-12.col-md-8
      .card.signin-card
        .card-block
          img.main-img(src="/icon/wcu.svg")
          img#signin-img.img-fluid(src='/assets/brand/login.JPG')
          form(method='post', action='/users/reset')
            .form-group
              input#passwordInput.form-control(name='password' type='password' required='required' placeholder='New Password')
            .form-group
              input#password2Input.form-control(name='password2' type='password' required='required' placeholder='Retype Password')
            input.btn.btn-primary.main-btn(type='submit', name='submit', value='Update')
            br
          a(href='/users/help')  need help？
      a.create-new-account(href='/users/register') no accounts？
    .col
